/**case-detail.wxss**/

/* 病例头部 */
.case-header {
  margin-bottom: 24rpx;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 24rpx;
}

.case-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.case-meta {
  padding: 0 32rpx 32rpx;
}

.meta-item {
  display: flex;
  margin-bottom: 8rpx;
}

.meta-label {
  font-size: 28rpx;
  color: #8E8E93;
  margin-right: 12rpx;
}

.meta-value {
  font-size: 28rpx;
  color: #1D1D1F;
}

/* 区块卡片 */
.section-card {
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 2rpx solid #F8F9FA;
}

.section-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #1D1D1F;
}

.section-icon {
  font-size: 32rpx;
}

.section-content {
  padding: 32rpx;
}

/* 信息行 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  min-height: 48rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 32rpx;
  color: #8E8E93;
  margin-right: 24rpx;
  flex-shrink: 0;
  min-width: 120rpx;
}

.info-value {
  font-size: 32rpx;
  color: #1D1D1F;
  flex: 1;
  text-align: right;
  line-height: 1.4;
}

/* 标签列表 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 12rpx 24rpx;
  background: #F0F7FF;
  color: #007AFF;
  border-radius: 20rpx;
  font-size: 28rpx;
  border: 2rpx solid #E3F2FD;
}

/* 文件相关 */
.file-section {
  margin-bottom: 32rpx;
}

.text-section {
  margin-bottom: 32rpx;
}

.subsection-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1D1D1F;
  margin-bottom: 16rpx;
}

.text-content {
  font-size: 30rpx;
  color: #1D1D1F;
  line-height: 1.6;
  background: #F8F9FA;
  padding: 24rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #007AFF;
}

.file-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr));
  gap: 16rpx;
}

.file-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  border: 2rpx solid #E5E5E7;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.2s ease;
}

.file-item:active {
  transform: scale(0.98);
  border-color: #007AFF;
}

.file-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F8F9FA;
}

.file-image {
  width: 100%;
  height: 100%;
}

.file-pdf {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.pdf-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.pdf-text {
  font-size: 24rpx;
  color: #8E8E93;
}

.file-name {
  font-size: 24rpx;
  color: #8E8E93;
  text-align: center;
  line-height: 1.2;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 空状态 */
.empty-section {
  text-align: center;
  padding: 48rpx 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #C7C7CC;
}

/* 底部操作栏 */
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #F8F9FA;
  display: flex;
  gap: 16rpx;
  z-index: 100;
}

.footer-actions .btn {
  flex: 1;
  margin: 0;
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-text {
  font-size: 28rpx;
  color: #8E8E93;
  margin-top: 16rpx;
}

/* 响应式调整 */
@media (max-width: 400px) {
  .file-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .info-row {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }
  
  .info-label {
    min-width: auto;
  }
  
  .info-value {
    text-align: left;
  }
  
  .header-content {
    flex-direction: column;
    align-items: flex-start;
    gap: 16rpx;
  }
  
  .footer-actions {
    flex-direction: column;
  }
}
