/**case-entry.wxss**/

/* 进度条区域 */
.progress-section {
  background: #ffffff;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border-bottom: 2rpx solid #F8F9FA;
}

.progress-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.progress-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 8rpx;
}

.progress-desc {
  font-size: 28rpx;
  color: #8E8E93;
}

.progress {
  width: 100%;
  height: 8rpx;
  background-color: #F8F9FA;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #007AFF 0%, #34C759 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 步骤指示器 */
.step-indicators {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 16rpx;
}

.step-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  min-width: 100rpx;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  background: #F8F9FA;
  color: #8E8E93;
  transition: all 0.2s ease;
}

.step-indicator.active .step-number {
  background: #007AFF;
  color: #ffffff;
}

.step-indicator.completed .step-number {
  background: #34C759;
  color: #ffffff;
}

.step-label {
  font-size: 24rpx;
  color: #8E8E93;
  text-align: center;
  line-height: 1.2;
}

.step-indicator.active .step-label {
  color: #007AFF;
  font-weight: 500;
}

.step-indicator.completed .step-label {
  color: #34C759;
}

/* 表单区域 */
.form-section {
  background: #ffffff;
  margin-bottom: 120rpx;
}

.step-content {
  padding: 32rpx;
  animation: fadeIn 0.3s ease-in-out;
}

/* 单选框样式 */
.radio-group {
  display: flex;
  gap: 48rpx;
  margin-top: 16rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  border: 2rpx solid #E5E5E7;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.2s ease;
  min-width: 120rpx;
}

.radio-item:active {
  transform: scale(0.98);
}

.radio-item.checked {
  border-color: #007AFF;
  background: #F0F7FF;
}

.radio-icon {
  font-size: 32rpx;
  color: #007AFF;
  margin-right: 12rpx;
}

.radio-label {
  font-size: 32rpx;
  color: #1D1D1F;
}

/* 时间输入样式 */
.duration-input {
  display: flex;
  gap: 16rpx;
  align-items: center;
  margin-top: 16rpx;
}

.duration-number {
  flex: 1;
}

.duration-unit {
  flex: 1;
}

.picker-display {
  padding: 24rpx;
  border: 2rpx solid #E5E5E7;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #1D1D1F;
  background: #ffffff;
  min-height: 88rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.picker-display.placeholder {
  color: #C7C7CC;
}

/* 复选框样式 */
.checkbox-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16rpx;
  margin-top: 16rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border: 2rpx solid #E5E5E7;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.2s ease;
  min-height: 88rpx;
}

.checkbox-item:active {
  transform: scale(0.98);
}

.checkbox-item.checked {
  border-color: #007AFF;
  background: #F0F7FF;
}

.checkbox-icon {
  font-size: 36rpx;
  color: #007AFF;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.checkbox-label {
  font-size: 32rpx;
  color: #1D1D1F;
  line-height: 1.4;
  flex: 1;
}

/* 文件上传样式 */
.file-upload-area {
  border: 4rpx dashed #C7C7CC;
  border-radius: 16rpx;
  padding: 64rpx 32rpx;
  text-align: center;
  margin-top: 16rpx;
  cursor: pointer;
  transition: all 0.2s ease;
}

.file-upload-area:active {
  border-color: #007AFF;
  background: #F0F7FF;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 32rpx;
  color: #1D1D1F;
  margin-bottom: 8rpx;
}

.upload-hint {
  font-size: 28rpx;
  color: #8E8E93;
}

/* 文件列表样式 */
.file-list {
  margin-top: 24rpx;
}

.file-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.file-info {
  flex: 1;
}

.file-name {
  font-size: 32rpx;
  color: #1D1D1F;
  margin-bottom: 4rpx;
}

.file-size {
  font-size: 28rpx;
  color: #8E8E93;
}

.file-actions {
  margin-left: 16rpx;
}

.file-remove {
  font-size: 28rpx;
  color: #FF3B30;
  padding: 8rpx 16rpx;
}

/* 文本域样式 */
.textarea {
  min-height: 200rpx !important;
  line-height: 1.5;
  resize: none;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #8E8E93;
  margin-top: 8rpx;
}

/* 必填标识 */
.required {
  color: #FF3B30;
  margin-left: 4rpx;
}

/* 表单提示 */
.form-hint {
  font-size: 28rpx;
  color: #8E8E93;
  margin-top: 8rpx;
  line-height: 1.4;
}

/* 底部操作栏 */
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #F8F9FA;
  display: flex;
  gap: 16rpx;
  z-index: 100;
}

.footer-actions .btn {
  flex: 1;
  margin: 0;
}

/* 响应式调整 */
@media (max-width: 400px) {
  .radio-group {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .radio-item {
    width: 100%;
  }
  
  .duration-input {
    flex-direction: column;
    align-items: stretch;
  }
  
  .step-indicators {
    justify-content: space-around;
  }
  
  .step-indicator {
    min-width: 80rpx;
  }
  
  .step-label {
    font-size: 22rpx;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
