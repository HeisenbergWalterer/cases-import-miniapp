<!--index.wxml-->
<view class="container">
  <!-- 顶部标题栏 -->
  <view class="header">
    <view class="header-title">医疗助手</view>
  </view>

  <!-- 主要内容区域 -->
  <view class="main-content">
    <!-- 功能区 -->
    <view class="function-section">
      <view class="function-card">
        <view class="function-button" bindtap="navigateToCaseImport">
          <image class="function-icon" src="/images/icon/导入.png" mode="aspectFit"></image>
          <text class="function-text">报告导入</text>
        </view>
        <view class="function-button" bindtap="navigateToCaseList">
          <image class="function-icon" src="/images/icon/病例.png" mode="aspectFit"></image>
          <text class="function-text">我的报告</text>
        </view>
      </view>
    </view>

    <!-- 欢迎信息 -->
    <view class="welcome-section">
      <view class="welcome-title">欢迎使用医疗助手</view>
      <view class="welcome-subtitle">为您提供便捷的病例管理服务</view>
    </view>

    <!-- AI功能区域 -->
    <view class="ai-section">
      <view class="section-title">智能分析中心</view>
      <view class="ai-card" bindtap="navigateToAIAnalysis">
        <view class="ai-icon">🤖</view>
        <view class="ai-content">
          <view class="ai-title">AI病情分析</view>
          <view class="ai-desc">点击进入AI分析界面</view>
        </view>
        <view class="ai-arrow">></view>
      </view>
    </view>
  </view>
</view>
