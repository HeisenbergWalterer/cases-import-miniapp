/* index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #4A90E2 0%, #87CEEB 30%, #F0F8FF 60%, #FFFFFF 100%);
  padding: 0;
  margin: 0;
}

/* 顶部标题栏 */
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 30rpx;
  padding-top: 5rpx;
  background: transparent;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 主要内容区域 */
.main-content {
  padding: 30rpx;
  padding-top: 20rpx;
}

/* 功能区 */
.function-section {
  margin-bottom: 40rpx;
}

.function-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 30rpx;
}

.function-button {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: linear-gradient(135deg, #4A90E2, #5BA0F2);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
  transition: all 0.3s ease;
}

.function-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.4);
}

.function-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 16rpx;
}

.function-text {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* 欢迎区域 */
.welcome-section {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.welcome-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
}

/* AI功能区域 */
.ai-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.ai-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.ai-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.ai-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.ai-content {
  flex: 1;
}

.ai-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.ai-desc {
  font-size: 26rpx;
  color: #666666;
}

.ai-arrow {
  font-size: 32rpx;
  color: #CCCCCC;
  margin-left: 16rpx;
}
