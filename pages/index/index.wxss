/* index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #4A90E2 0%, #87CEEB 25%, #E8F4F8 55%, #FFFFFF 85%, #F8FBFF 100%);
  padding: 0;
  margin: 0;
  position: relative;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 50% 30%, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  pointer-events: none;
}

/* 功能区域组件 */
.function-component {
  padding: 40rpx;
  padding-top: 220rpx;
  position: relative;
  z-index: 1;
}

.function-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 32rpx;
  padding: 80rpx 50rpx;
  box-shadow: 0 12rpx 36rpx rgba(0, 0, 0, 0.12);
  display: flex;
  gap: 30rpx;
  justify-content: space-between;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.function-button {
  flex: 1;
  max-width: 180rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #4A90E2, #5BA0F2);
  border-radius: 28rpx;
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.25);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.function-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
  border-radius: 28rpx;
  pointer-events: none;
}

.function-button:active {
  transform: scale(0.92);
  box-shadow: 0 3rpx 12rpx rgba(74, 144, 226, 0.4);
  background: linear-gradient(135deg, #3A7BC8, #4A90E2);
}

.function-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.function-text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 600;
  text-align: center;
  line-height: 1.3;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
  letter-spacing: 1rpx;
}
