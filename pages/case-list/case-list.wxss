/* 容器样式 - 与首页相同的蓝白渐变背景 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #4A90E2 0%, #87CEEB 30%, #F0F8FF 60%, #FFFFFF 100%);
  padding: 0;
  margin: 0;
}

/* 病例列表组件 */
.case-list-component {
  padding: 30rpx;
  padding-top: 20rpx;
}

.case-list-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 病例列表样式 */
.case-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.case-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.case-item:active {
  transform: scale(0.98);
  background: #f1f3f5;
}

.case-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.case-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.case-time {
  font-size: 22rpx;
  color: #999;
}

.case-info {
  margin-bottom: 16rpx;
}

.info-item {
  display: flex;
  margin-bottom: 6rpx;
}

.label {
  font-size: 24rpx;
  color: #666;
  width: 120rpx;
}

.value {
  font-size: 24rpx;
  color: #333;
  flex: 1;
}

.case-summary {
  margin-bottom: 20rpx;
}

.summary-item {
  margin-bottom: 6rpx;
}

.summary-label {
  font-size: 24rpx;
  color: #666;
}

.summary-value {
  font-size: 24rpx;
  color: #333;
}

.case-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  flex: 1;
  padding: 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  border: none;
  background: #ffffff;
  color: #4A90E2;
  border: 1rpx solid #4A90E2;
}

.action-btn.delete {
  background: #ffffff;
  color: #f44336;
  border: 1rpx solid #f44336;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 32rpx;
}

.empty-btn {
  background: linear-gradient(135deg, #4A90E2, #5BA0F2);
  color: white;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  border: none;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #4A90E2, #5BA0F2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.4);
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 40rpx;
  color: white;
  font-weight: 600;
} 