/* 容器样式 */
.container {
  padding: 20rpx;
  padding-top: 20rpx;
  background-color: #f8f9fa;
  height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 进度条样式 */
.progress-section {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  flex-shrink: 0;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  transition: width 0.3s ease;
}

.progress-text {
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

/* 表单容器 */
.form-container {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow-y: auto;
  display: flex;
  flex-direction: column;
}

.step-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  text-align: center;
  flex-shrink: 0;
}

/* 表单组件样式 */
.form-group {
  margin-bottom: 20rpx;
  flex-shrink: 0;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  box-sizing: border-box;
}

.form-picker {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  background: #f8f9fa;
  box-sizing: border-box;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.form-textarea {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  box-sizing: border-box;
  min-height: 120rpx;
}

.form-textarea.compact {
  min-height: 80rpx;
  max-height: 120rpx;
}

/* 报告内容文本框专用样式 - 增强圆角效果和阴影 */
.form-textarea.report-content {
  border-radius: 20rpx;
  border: 2rpx solid #e6eaf3;
  background: #ffffff;
  box-shadow: 
    0 2rpx 8rpx rgba(0, 0, 0, 0.08),
    0 8rpx 24rpx rgba(102, 126, 234, 0.12),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.5);
  min-height: 160rpx;
  max-height: 800rpx; /* 设置最大高度，避免过长 */
  transition: all 0.3s ease;
  word-wrap: break-word; /* 自动换行 */
  line-height: 1.6; /* 行高 */
  padding: 24rpx; /* 增加内边距 */
}

.form-textarea.report-content:focus {
  border-color: #667eea;
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.12),
    0 12rpx 32rpx rgba(102, 126, 234, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  background: #fff;
  transform: translateY(-2rpx);
}

/* 时间输入样式 */
.duration-input {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.duration-number {
  flex: 1;
  padding: 18rpx 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  height: 80rpx;
  box-sizing: border-box;
}

.duration-picker {
  flex: 1;
  padding: 18rpx 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  background: #f8f9fa;
  height: 80rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

/* 复选框网格 */
.checkbox-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  background: #f8f9fa;
}

.checkbox-label {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #333;
}

/* 按钮区域 */
.button-section {
  display: flex;
  gap: 20rpx;
  padding: 16rpx 0;
  flex-shrink: 0;
}

.btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.btn-secondary {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.btn:active {
  transform: scale(0.98);
} 

/* OCR功能样式 */
.ocr-section {
  margin-top: 16rpx;
}

.ocr-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.ocr-btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.ocr-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.ocr-text {
  font-weight: 500;
}

.ocr-tip {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 1.5;
} 