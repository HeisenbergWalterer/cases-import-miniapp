/**app.wxss**/

/* 全局重置样式 */
page {
  background-color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  font-size: 32rpx;
  line-height: 1.6;
  color: #1D1D1F;
}

/* 容器样式 */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background-color: #ffffff;
}

.safe-area {
  padding-bottom: env(safe-area-inset-bottom);
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  overflow: hidden;
}

.card-header {
  padding: 32rpx;
  border-bottom: 2rpx solid #F8F9FA;
}

.card-body {
  padding: 32rpx;
}

.card-footer {
  padding: 32rpx;
  border-top: 2rpx solid #F8F9FA;
  background-color: #F8F9FA;
}

/* 标题样式 */
.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 36rpx;
  font-weight: 500;
  color: #1D1D1F;
  margin-bottom: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1D1D1F;
  margin-bottom: 24rpx;
}

.text-secondary {
  color: #8E8E93;
}

.text-success {
  color: #34C759;
}

.text-warning {
  color: #FF9500;
}

.text-error {
  color: #FF3B30;
}

/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 48rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  min-height: 88rpx;
  transition: all 0.2s ease;
}

.btn-primary {
  background-color: #007AFF;
  color: #ffffff;
}

.btn-primary:active {
  background-color: #0056CC;
  transform: scale(0.98);
}

.btn-secondary {
  background-color: #F8F9FA;
  color: #1D1D1F;
  border: 2rpx solid #E5E5E7;
}

.btn-secondary:active {
  background-color: #E5E5E7;
  transform: scale(0.98);
}

.btn-success {
  background-color: #34C759;
  color: #ffffff;
}

.btn-success:active {
  background-color: #28A745;
  transform: scale(0.98);
}

.btn-large {
  padding: 32rpx 64rpx;
  font-size: 36rpx;
  min-height: 96rpx;
}

.btn-block {
  width: 100%;
}

.btn-disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 表单样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #1D1D1F;
  margin-bottom: 12rpx;
}

.form-control {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #E5E5E7;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #1D1D1F;
  background-color: #ffffff;
  min-height: 88rpx;
  box-sizing: border-box;
}

.form-control:focus {
  border-color: #007AFF;
  outline: none;
}

.form-control.error {
  border-color: #FF3B30;
}

.error-message {
  font-size: 28rpx;
  color: #FF3B30;
  margin-top: 8rpx;
  margin-left: 4rpx;
}

/* 进度条样式 */
.progress {
  width: 100%;
  height: 8rpx;
  background-color: #F8F9FA;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background-color: #007AFF;
  transition: width 0.3s ease;
}

/* 列表样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #F8F9FA;
  min-height: 120rpx;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #F8F9FA;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1D1D1F;
  margin-bottom: 8rpx;
}

.list-item-desc {
  font-size: 28rpx;
  color: #8E8E93;
}

.list-item-arrow {
  width: 24rpx;
  height: 24rpx;
  margin-left: 16rpx;
}

/* 徽章样式 */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  min-width: 40rpx;
}

.badge-primary {
  background-color: #007AFF;
  color: #ffffff;
}

.badge-success {
  background-color: #34C759;
  color: #ffffff;
}

.badge-warning {
  background-color: #FF9500;
  color: #ffffff;
}

.badge-secondary {
  background-color: #8E8E93;
  color: #ffffff;
}

/* 工具类 */
.d-flex {
  display: flex;
}

.align-items-center {
  align-items: center;
}

.justify-content-center {
  justify-content: center;
}

.justify-content-between {
  justify-content: space-between;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.mt-8 { margin-top: 8rpx; }
.mt-16 { margin-top: 16rpx; }
.mt-24 { margin-top: 24rpx; }
.mt-32 { margin-top: 32rpx; }
.mt-48 { margin-top: 48rpx; }

.mb-8 { margin-bottom: 8rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mb-24 { margin-bottom: 24rpx; }
.mb-32 { margin-bottom: 32rpx; }
.mb-48 { margin-bottom: 48rpx; }

.ml-8 { margin-left: 8rpx; }
.ml-16 { margin-left: 16rpx; }
.ml-24 { margin-left: 24rpx; }

.mr-8 { margin-right: 8rpx; }
.mr-16 { margin-right: 16rpx; }
.mr-24 { margin-right: 24rpx; }

.p-8 { padding: 8rpx; }
.p-16 { padding: 16rpx; }
.p-24 { padding: 24rpx; }
.p-32 { padding: 32rpx; }

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.slide-in {
  animation: slideIn 0.3s ease-in-out;
}

@keyframes slideIn {
  from {
    transform: translateX(100%);
  }
  to {
    transform: translateX(0);
  }
}

/* 加载动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #F8F9FA;
  border-top: 4rpx solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
