/**app.wxss**/
/* 全局样式重置 */
page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 通用样式类 */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
}

/* 按钮样式重置 */
button {
  background: none;
  border: none;
  outline: none;
  padding: 0;
  margin: 0;
  font-size: inherit;
  color: inherit;
  line-height: inherit;
}

button::after {
  border: none;
}

/* 输入框样式重置 */
input, textarea {
  border: none;
  outline: none;
  background: none;
  font-size: inherit;
  color: inherit;
}

/* 链接样式重置 */
a {
  text-decoration: none;
  color: inherit;
}

/* 通用间距类 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }

.p-10 { padding: 10rpx; }
.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }

/* 通用文本类 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.text-primary { color: #667eea; }
.text-secondary { color: #666; }
.text-muted { color: #999; }
.text-white { color: white; }

.font-bold { font-weight: 600; }
.font-normal { font-weight: 400; }

/* 通用布局类 */
.flex { display: flex; }
.flex-column { flex-direction: column; }
.flex-row { flex-direction: row; }
.flex-center { justify-content: center; align-items: center; }
.flex-between { justify-content: space-between; }
.flex-around { justify-content: space-around; }

/* 通用圆角类 */
.rounded { border-radius: 8rpx; }
.rounded-lg { border-radius: 16rpx; }
.rounded-full { border-radius: 50%; }

/* 通用阴影类 */
.shadow { box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08); }
.shadow-lg { box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12); }

/* 通用背景类 */
.bg-white { background-color: white; }
.bg-primary { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
.bg-light { background-color: #f8f9fa; }

/* 通用边框类 */
.border { border: 2rpx solid #e9ecef; }
.border-top { border-top: 1rpx solid #f0f0f0; }
.border-bottom { border-bottom: 1rpx solid #f0f0f0; }

/* 响应式隐藏类 */
.hidden { display: none; }

/* 动画类 */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 加载动画 */
.loading {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid #f3f3f3;
  border-top: 2rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 
